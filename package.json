{
  "name": "exec",
  "version": "1.0.0",
  "description": "Desktop Application for managing and executing commonly used terminal commands",
  "main": "app/build/main.js",
  "scripts": {
    "compile:renderer": "webpack --config ./app/renderer/webpack.config.js",
    "compile:renderer:dev": "webpack --config ./app/renderer/webpack.config.dev.js",
    "watch:renderer": "webpack --watch --config ./app/renderer/webpack.config.dev.js",
    "compile:main": "tsc -p ./app/main/tsconfig.json",
    "compile:main:dev": "tsc -p ./app/main/tsconfig.dev.json",
    "compile": "concurrently -n \"Main,Renderer\" -c \"green,yellow\" \"npm run-script compile:main\" \"npm run-script compile:renderer\"",
    "compile:dev": "concurrently -n \"Main Dev, Renderer Dev\" -c \"green,yellow\" \"npm run-script compile:main:dev\" \"npm run-script compile:renderer:dev\"",
    "local": "npm run-script clean && npm run-script compile && electron app/build/main.js",
    "watch": "concurrently -n \"Main Watch,Renderer Watch\" -c \"magenta,cyan\" \"electron build/main.js\" \"npm run-script watch:renderer\"",
    "dev": "npm run-script clean && npm run-script compile:dev && npm run-script watch",
    "clean": "ts-node scripts/clean.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pwbrown/exec.git"
  },
  "author": "Philip Brown",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pwbrown/exec/issues"
  },
  "homepage": "https://github.com/pwbrown/exec#readme",
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "concurrently": "^4.1.2",
    "electron": "^6.0.9",
    "fs-extra": "^8.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "electron-store": "^5.0.0"
  }
}
